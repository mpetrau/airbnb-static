<% flat = data.flats[owner] %>
<div class="banner", style="background-image: url('<%= image_path "#{flat.picture}.jpeg" %>'); height: 50vh; background-position: bottom;">
</div>

<div class="container">
  <div class="row padded">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="flat-card">
        <div class="flat-card-owner">
          <%= image_tag "#{flat.owner_picture}.jpeg", class: "avatar-large avatar-bordered"%>
          <br>
          <p><%= flat.owner_name %></p>
        </div>
        <div>
          <h3><%= flat.summary %></h3>
          <p><%=flat.city%></p>
          <% flat.rating.times do %><i class="fa fa-star pass" aria-hidden="true"></i><% end %>
          <% (5-flat.rating).times do %><i class="fa fa-star miss" aria-hidden="true"></i><% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <form action="" class="form-horizontal">
        <div class="form-group">
          <label class="sr-only" for="checkin">Check-in</label>
          <input type="text" id="checkin" placeholder="checkin" class="form-control input-sm">
        </div>
        <div class="form-group">
          <label class="sr-only" for="checkout">Check-out</label>
          <input type="text" id="checkout" placeholder="checkout" class="form-control input-sm">
        </div>
        <div class="form-group">
          <label class="sr-only" for="guests">Number of Guests</label>
          <select id="guests" class="form-control input-sm">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Book now!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="wrapper-gray">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p><%= flat.about %></p>
        <hr>
      </div>
    </div>
    <div class="row flat-details">
      <div class="col-xs-12 col-sm-2 col-sm-offset-1">
        <p>The space</p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p>Accommodates: <%= content_tag(:strong, flat.accommodates) %></p>
        <p>Bathrooms: <%= content_tag(:strong, flat.bathrooms) %></p>
        <p>Bedrooms: <%= content_tag(:strong, flat.bedrooms) %></p>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p>Property type: <%= content_tag(:strong, flat.property_type) %></p>
        <p>Room type: <%= content_tag(:strong, flat.room_type) %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <hr>
      </div>
    </div>
    <div class="row flat-details">
      <div class="col-xs-12 col-sm-2 col-sm-offset-1">
       <p>Amenities</p>
     </div>
     <div class="col-xs-12 col-sm-3">
      <p><%= content_tag(:i, "", class: "fa fa-cutlery") + content_tag(:strong, " Kitchen") if flat.kitchen == true %></p>
      <p><%= content_tag(:i, "", class: "fa fa-wifi") + content_tag(:strong, " WiFi") if flat.wifi == true %></p>
    </div>
    <div class="col-xs-12 col-sm-3">
      <p><%= content_tag(:i, "", class: "fa fa-tv") + content_tag(:strong, " TV")  if flat.tv == true %></p>
    </div>
  </div>
</div>
</div>
